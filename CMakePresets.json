{
  "version": 10,
  "configurePresets": [
    {
      "name": "ci-base",
      "hidden": true,
      "displayName": "CI Base",
      "description": "Base configuration for CI",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "ci-debug-hardened",
      "inherits": "ci-base",
      "displayName": "Debug with warnings and hardening",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-O2 -Wall -Wextra -Wpedantic -Wconversion -Wsign-conversion -Wcast-qual -Wformat -Wformat=2 -Wundef -Werror=float-equal -Wshadow -Wcast-align -Wunused -Wnull-dereference -Wdouble-promotion -Wimplicit-fallthrough -Wextra-semi -Woverloaded-virtual -Wnon-virtual-dtor -Wold-style-cast -Werror=format-security -U_FORTIFY_SOURCE -D_FORTIFY_SOURCE=3 -D_GLIBCXX_ASSERTIONS -fstrict-flex-arrays=3 -fstack-protector-strong"
      }
    },
    {
      "name": "ci-release",
      "inherits": "ci-base",
      "displayName": "Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-O3 -DNDEBUG -flto -fno-plt -march=native"
      }
    },
    {
      "name": "ci-no-except-rtti",
      "inherits": "ci-base",
      "displayName": "Release no RTTI or exceptions",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-O3 -DNDEBUG -flto -fno-plt -march=native -fno-exceptions -fno-rtti"
      }
    },
    {
      "name": "ci-sanitize",
      "inherits": "ci-base",
      "displayName": "Debug with sanitizers",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-O3 -DNDEBUG -fno-exceptions -fno-rtti"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ci-debug-hardened",
      "configurePreset": "ci-debug-hardened"
    },
    {
      "name": "ci-release",
      "configurePreset": "ci-release"
    },
    {
      "name": "ci-no-except-rtti",
      "configurePreset": "ci-no-except-rtti"
    }
  ],
  "testPresets": [
    {
      "name": "ci-debug-hardened",
      "configurePreset": "ci-debug-hardened",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "stopOnFailure": true
      }
    },
    {
      "name": "ci-release",
      "configurePreset": "ci-release",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "stopOnFailure": true
      }
    },
    {
      "name": "ci-no-except-rtti",
      "configurePreset": "ci-no-except-rtti",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "stopOnFailure": true
      }
    }
  ]
}
