{
  "version": 10,
  "configurePresets": [
    {
      "name": "llvm-brew",
      "displayName": "LLVM (Homebrew)",
      "description": "Use Homebrew LLVM compilers",
      "binaryDir": "${sourceDir}/build/llvm-brew",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/llvm-brew-toolchain.cmake",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "llvm-brew",
      "configurePreset": "llvm-brew"
    }
  ]
}
